<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/share_reminder_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp"
        android:textColor="@color/first_text_color"
        android:textSize="@dimen/third_text_size" />

    <ImageView
        android:id="@+id/share_wechat_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/share_reminder_text"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/wechat_logo" />

    <TextView
        android:id="@+id/wechat_share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/share_wechat_logo"
        android:layout_below="@+id/share_wechat_logo"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="微信好友"
        android:textColor="@color/first_text_color"
        android:textSize="@dimen/fifth_text_size" />

    <ImageView
        android:id="@+id/share_wechat_monents_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/share_reminder_text"
        android:layout_marginRight="80dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/wechatmoments_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/share_wechat_monents_logo"
        android:layout_below="@+id/share_wechat_monents_logo"
        android:layout_marginTop="10dp"
        android:text="朋友圈"
        android:textColor="@color/first_text_color"
        android:textSize="@dimen/fifth_text_size" />

    <TextView
        android:id="@+id/share_wechat_reminder_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wechat_share_text"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:text="分享口令给微信好友时，必须点返回应用方可查看当前口令"
        android:visibility="gone" />
</RelativeLayout>
